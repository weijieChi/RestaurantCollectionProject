<form class="form-signup" action="/users/{{ user.id }}?_method=PUT" method="POST" style="width: 100%;">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="Name" value="{{ user.name }}" required autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="image">image</label>
    <input class="form-control" type="file" class="form-control-file" id="image" name="image" disabled>
  </div>
  <button class="btn btn-primary btn-block" type="submit">Submit</button>
</form>